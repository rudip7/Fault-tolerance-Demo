    <bean id="experiment.flink.labelpropBulk" parent="experiment.flink-0.9-SNAPSHOT-mholzemer" abstract="true">
        <constructor-arg name="command">
            <value>-v -c eu.stratosphere.procrustes.experiments.recovery.LabelPropStandalone ${app.path.jobs}/procrustes-flink-1.0.SNAPSHOT.jar ${system.hadoop-2.path.input}/circle-raw ${system.hadoop-2.path.output}/labelprop 10 0</value>
