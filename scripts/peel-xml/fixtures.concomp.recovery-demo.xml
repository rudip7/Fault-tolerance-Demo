<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://www.springframework.org/schema/beans"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <!-- Custom Systems -->
    <import resource="fixtures.systems.xml"/>

    <!--************************************************************************
    * Data Sets
    *************************************************************************-->
    
    <bean id="dataset.dblp" parent="dataset.static.hdfs-2">
		<constructor-arg name="src" value="/data/users/mholzemer/dblp.txt"/>
		<constructor-arg name="dst" value="${system.hadoop-2.path.input}/dblp.txt"/>
	</bean>
	
	<bean id="dataset.friendster" parent="dataset.static.hdfs-2">
		<constructor-arg name="src" value="/data/users/mholzemer/com-friendster.ungraph.txt"/>
		<constructor-arg name="dst" value="${system.hadoop-2.path.input}/com-friendster.ungraph.txt"/>
	</bean>
	
	<bean id="dataset.orkut" parent="dataset.static.hdfs-2">
		<constructor-arg name="src" value="/data/users/mholzemer/com-orkut.ungraph.txt"/>
		<constructor-arg name="dst" value="${system.hadoop-2.path.input}/com-orkut.ungraph.txt"/>
	</bean>
	
	<bean id="dataset.uk2005" parent="dataset.static.hdfs-2">
		<constructor-arg name="src" value="/data/users/mholzemer/uk-2005-raw"/>
		<constructor-arg name="dst" value="${system.hadoop-2.path.input}/uk-2005-raw"/>
	</bean>
	
	<bean id="dataset.line" parent="dataset.static.hdfs-2">
		<constructor-arg name="src" value="/data/users/mholzemer/circle-raw"/>
		<constructor-arg name="dst" value="${system.hadoop-2.path.input}/circle-raw"/>
	</bean>


    <!--************************************************************************
    * Experiments
    *************************************************************************-->

    <!-- k-means output -->
    <bean id="experiment.output.hdfs.concomp" parent="experiment.output.hdfs-2">
        <constructor-arg name="path" value="${system.hadoop-2.path.output}/concomp"/>
    </bean>
	
	<!-- concomp experiment (flink) -->
    <bean id="experiment.flink.concompAlt" parent="experiment.flink-0.9-SNAPSHOT-mholzemer" abstract="true">
        <constructor-arg name="command">
            <value>-v -c eu.stratosphere.procrustes.experiments.recovery.ConnectedComponentsBulk ${app.path.jobs}/procrustes-flink-1.0.SNAPSHOT.jar ${system.hadoop-2.path.input}/circle-raw ${system.hadoop-2.path.output}/concomp 10 0</value>
        </constructor-arg>
        <constructor-arg name="input">
        	<ref bean="dataset.line"/>
        </constructor-arg>
        <constructor-arg name="output">
            <ref bean="experiment.output.hdfs.concomp"/>
        </constructor-arg>
    </bean>
	
<!-- concomp experiment (flink) -->
    <bean id="experiment.flink.checkpoint-demo" parent="experiment.flink-0.9-SNAPSHOT-mholzemer" abstract="true">
        <constructor-arg name="command">
            <value>-v -c eu.stratosphere.procrustes.experiments.recovery.ConnectedComponentsBulk ${app.path.jobs}/procrustes-flink-1.0.SNAPSHOT.jar ${system.hadoop-2.path.input}/circle-raw ${system.hadoop-2.path.output}/concomp 10 4</value>
        </constructor-arg>
        <constructor-arg name="input">
        	<ref bean="dataset.line"/>
        </constructor-arg>
        <constructor-arg name="output">
            <ref bean="experiment.output.hdfs.concomp"/>
        </constructor-arg>
    </bean>
		

    <!--************************************************************************
    * Fixtures
    *************************************************************************-->

    <!-- fixtures for local development and testing -->
    <bean id="concomp.demo" class="eu.stratosphere.peel.core.beans.experiment.ExperimentSuite">
        <constructor-arg name="experiments">
            <list>
                <bean parent="experiment.flink.concompAlt">
                    <constructor-arg name="name" value="concompBulk.run"/>
                    <constructor-arg name="config">
                        <value/>
                    </constructor-arg>
                </bean>
		<bean parent="experiment.flink.checkpoint-demo">
                    <constructor-arg name="name" value="concompBulk.run2"/>
                    <constructor-arg name="config">
                        <value/>
                    </constructor-arg>
                </bean>
            </list>
        </constructor-arg>
    </bean>
	
</beans>
